{% extends 'app.twig' %}

{% block content %}
    <div class="loading" v-if="loading">
        One moment
    </div>
    <div class="item" v-for="item in items" v-else>
        <h3 class="item__title">
            <a :href="item.link">${ item.title }</a>
        </h3>
        <div class="item__service">
            ${ item.service }
        </div>
    </div>
{% endblock %}
